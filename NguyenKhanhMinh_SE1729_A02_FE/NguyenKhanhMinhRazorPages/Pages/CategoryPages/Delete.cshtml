@page
@model NguyenKhanhMinhRazorPages.Pages.CategoryPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    String role = HttpContext.Session.GetString("UserRole");
    if (!("1").Equals(role))
    {
        Response.Redirect("/NotPermission");
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDesciption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ParentCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.ParentCategory.CategoryName)
        </dd>
    </dl>
    
    <form method="post" onsubmit="return confirmDelete()">
        <input type="hidden" asp-for="Category.CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>

    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
</div>
