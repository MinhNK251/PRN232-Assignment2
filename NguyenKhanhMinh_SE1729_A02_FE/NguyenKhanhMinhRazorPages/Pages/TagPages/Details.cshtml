@page
@model NguyenKhanhMinhRazorPages.Pages.TagPages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    String role = HttpContext.Session.GetString("UserRole");
    if (!("1").Equals(role))
    {
        Response.Redirect("/NotPermission");
    }
}

<h1>Details</h1>

<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.TagId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.TagId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.TagName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.TagName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.Note)
        </dd>
        <dt class="col-sm-2">
            NewsArticles
        </dt>
        <dd class="col-sm-10">
            @if (Model.Tag.NewsArticles.Any())
            {
                <ul>
                    @foreach (var article in Model.Tag.NewsArticles)
                    {
                        <li>@article.NewsTitle</li>
                    }
                </ul>
            }
            else
            {
                <p>No News Article available</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Tag.TagId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
